#docker image build -t timbergrove/ophanim2_node_app -f opNodeDockerFile .
FROM alpine:latest
LABEL maintainer="Shashank Chitnis "
LABEL description="This Dockerfile installs node backend on alpine."
RUN apk add --update nodejs && \
  apk add --update npm

ADD op_node_app.tar.gz /usr/share/nodeApp

WORKDIR /usr/share/nodeApp

#ENTRYPOINT ["nginx"]
# ENTRYPOINT ["/bin/sh"]
CMD ["npm", "start"]

ENV MONGO=mongodb+srv://timbergrove:cloud20byline@ophanim2qa-wy5jo.mongodb.net/Ophanim2?retryWrites=true
ENV SKC=tempSkc

#Expose ports
EXPOSE 80
EXPOSE 443
EXPOSE 3000/tcp